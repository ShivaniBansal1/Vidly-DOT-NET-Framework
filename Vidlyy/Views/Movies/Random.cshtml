@model Vidlyy.ViewModels.MovieViewModel
@*@using Vidlyy.Models*@

@{
    ViewBag.Title = "Random"; //title of page shown in browser
    Layout = "~/Views/Shared/_Layout.cshtml";  //layout for the view
}

@{ 
    var classname = Model.Customers.Count > 0 ? "popular" : null ;
}


<h2 class="@classname">@Model.Movie.Name</h2>  

@{ 
    if (Model.Customers.Count == 0)
    {
        <text>We don't have customers yet.</text>
    }
    else
    {
        <ul>
            @foreach (var customer in Model.Customers)
            {
                <li>@customer.Name</li>
            }
        </ul>
    }
}

