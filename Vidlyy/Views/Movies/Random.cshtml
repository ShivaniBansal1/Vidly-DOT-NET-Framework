@model IEnumerable<Vidlyy.Models.Movie>
@*@using Vidlyy.Models*@

@{
    ViewBag.Title = "Random"; //title of page shown in browser
    Layout = "~/Views/Shared/_Layout.cshtml";  //layout for the view
}

@*@{
        var classname = Model.Customers.Count > 0 ? "popular" : null ;
    }*@


<h1>Movies</h1>

@{
    if (!Model.Any())
    {
        <text>We don't have movies yet.</text>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        @*<td>@Html.ActionLink(movie.Name, "Index", "Movies", new { id = movie.Id }, null)</td>*@
                        <td>@movie.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

